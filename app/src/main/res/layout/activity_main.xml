<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/gradient_drawable"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="323dp"
        android:layout_height="338dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:foreground="@drawable/imageview_border"
        android:src="@drawable/defaultpic"
        app:layout_constraintDimensionRatio="h, 3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/rounded_corner"
        android:text="Take Picture"
        android:backgroundTint="#E36A61"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textview1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/textview1"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:fontFamily="sans-serif"
        android:text="No mood detected"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.323" />

    <Button
        android:id="@+id/btnemo"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:fontFamily="sans-serif"
        android:backgroundTint="#F8BB5F"
        android:text="Select Mood"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnplay"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintVertical_bias="0.32"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnplay"
        android:layout_width="153dp"
        android:layout_height="61dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#7886D5"
        android:background="@drawable/rounded_corner"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif"
        android:text="Play Songs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintVertical_bias="0.32" />

</androidx.constraintlayout.widget.ConstraintLayout>